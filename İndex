<script>
const chat=document.getElementById("chat");
const inp=document.getElementById("inp");
const mic=document.getElementById("mic");

/* API KEY */
let KEY=localStorage.getItem("OPENAI_KEY");
if(!KEY){
  KEY=prompt("OpenAI API Key:");
  if(KEY) localStorage.setItem("OPENAI_KEY",KEY);
}

/* MESAJ */
function add(text,cls){
  const d=document.createElement("div");
  d.className="msg "+cls;
  d.textContent=text;
  chat.appendChild(d);
  chat.scrollTop=chat.scrollHeight;
  return d;
}

/* KONUÅžMA */
function speak(t){
  speechSynthesis.cancel();
  const u=new SpeechSynthesisUtterance(t);
  u.lang="tr-TR";
  u.rate=0.95;
  speechSynthesis.speak(u);
}

/* GÃ–NDER */
async function send(){
  const q=inp.value.trim();
  if(!q) return;
  inp.value="";
  add(q,"user");

  const typing=add("Eymen AI yazÄ±yorâ€¦","ai typing");

  try{
    const r=await fetch("https://api.openai.com/v1/chat/completions",{
      method:"POST",
      headers:{
        "Authorization":"Bearer "+KEY,
        "Content-Type":"application/json"
      },
      body:JSON.stringify({
        model:"gpt-4o-mini",
        messages:[
          {role:"system",content:"TÃ¼rkÃ§e, kÄ±sa, net ve samimi cevap ver."},
          {role:"user",content:q}
        ]
      })
    });

    const j=await r.json();
    typing.remove();
    const a=j.choices[0].message.content;
    add(a,"ai");
    speak(a);

  }catch(e){
    typing.textContent="BaÄŸlantÄ± hatasÄ±.";
  }
}

document.getElementById("send").onclick=send;
inp.onkeydown=e=>{if(e.key==="Enter")send()};

/* MÄ°KROFON */
const SR=window.SpeechRecognition||window.webkitSpeechRecognition;
if(SR){
  const rec=new SR();
  rec.lang="tr-TR";
  mic.onclick=()=>{rec.start();mic.classList.add("active")};
  rec.onresult=e=>{inp.value=e.results[0][0].transcript;send()};
  rec.onend=()=>mic.classList.remove("active");
}

/* Ä°LK MESAJ */
add("HazÄ±rÄ±m. Yaz ya da konuÅŸ.","ai");
</script>

